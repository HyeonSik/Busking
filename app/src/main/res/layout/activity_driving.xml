<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cwhite"
    android:orientation="vertical"
    tools:context="com.unithon.busking.activity.DrivingActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/corange"
        android:gravity="center"
        android:text="@string/driving_txt"
        android:textColor="@color/cwhite"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message_txt"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/cgray"
        android:gravity="center"
        android:text="@string/message_box"
        android:textColor="@color/cblack" />


    <Button
        android:id="@+id/btn_sample"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#cc0033" />

</LinearLayout>
